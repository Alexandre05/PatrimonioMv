<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fotoItemA"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFotos"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoItemA" />

    <LinearLayout
        android:id="@+id/detailsLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewFotos">

        <TextView
            android:id="@+id/nomeItemA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Item"
            android:textColor="#191818"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/localizacaoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localização"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/placaA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/informacoesGeraisA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informações Gerais"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/vistoriadorA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vistoriado por"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnViewOnMapA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver no mapa" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
